<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr></tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do  %>
      <i class="fas fa-user-cog" aria-hidden="true"></i>
      <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @newbook do |f| %>
      <div class="form-group"><p>Title</p><%= f.text_field :title %></div>
      <div class="form-group"><P>Opinion</P><%= f.text_area :body %></div>
      <div class="form-group"><p><%= f.submit 'Create Book',class:"btn btn-sm btn-success" %></p></div>
      <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
       <h1>Book detail</h1></h1>
       <table class="table">
         <tbody>
           <tr>
           <td>
             <%= link_to user_path(@book.user.id) do %>
             <%= image_tag @user.get_profile_image(100,100) %><br><%= @user.name %><% end %></td>
           <td><%= link_to @book.title, book_path(@book.id), class:"book-title" %></td>
           <td><%= @book.body %></td>
           <% if current_user==@user %>
           <td><%=  link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
           <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class:"btn btn-sm btn-danger" %></td>
           </tr>
           <% end %>
        </tbody>
      </table>
     </div>
   </div>
 </div>